<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.neurony.marcin.psytool.CalculatorActivity"
    tools:showIn="@layout/activity_calculator"
    android:background="@color/colorPrimaryDark">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">



        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/editDisplay"
            android:layout_column="0"
            android:background="#000000"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:lines="2"
            android:gravity="end"
            android:layout_span="3"
            android:layout_weight="2"
            android:focusable="true"
            android:nestedScrollingEnabled="true"
            android:maxLines="3"
            android:inputType="textImeMultiLine|textMultiLine"
            android:focusableInTouchMode="true"
            android:onClick="klik_editDisplay" />
        <!--android:layout_span="4" -->



    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:text="@string/text_default"
            android:id="@+id/textBelow"
            android:layout_column="0"
            android:background="#000000"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:lines="2"
            android:gravity="center"
            android:layout_span="3"
            android:layout_weight="2"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/But1_1"
            android:layout_column="0"
            android:layout_weight="1"
            style="@android:style/Widget.Button"
            android:background="@drawable/butcalc_states"
            android:scaleType="fitCenter"
            android:textColor="#ffffff"
            android:text="/"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:onClick="klik_exp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/But1_2"
            android:layout_column="1"
            android:layout_weight="1"
            style="@android:style/Widget.Button"
            android:background="@drawable/butcalc_states"
            android:scaleType="fitCenter"
            android:textColor="#ffffff"
            android:text="*"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:onClick="klik_exp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/But1_3"
            android:layout_column="2"
            android:layout_weight="1"
            style="@android:style/Widget.Button"
            android:background="@drawable/butcalc_states"
            android:scaleType="fitCenter"
            android:textColor="#ffffff"
            android:text="-"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:onClick="klik_exp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/But1_4"
            android:layout_column="3"
            android:layout_weight="1"
            style="@android:style/Widget.Button"
            android:background="@drawable/butcalc_states"
            android:scaleType="fitCenter"
            android:textColor="#ffffff"
            android:text="+"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:onClick="klik_exp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/But2_1"
            android:layout_column="0"
            android:layout_weight="1"
            style="@android:style/Widget.Button"
            android:background="@drawable/butcalc_states"
            android:scaleType="fitCenter"
            android:textColor="#ffffff"
            android:text="7"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:onClick="klik_num" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/But2_2"
            android:layout_column="1"
            android:layout_weight="1"
            style="@android:style/Widget.Button"
            android:background="@drawable/butcalc_states"
            android:scaleType="fitCenter"
            android:textColor="#ffffff"
            android:text="8"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:onClick="klik_num" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/But2_3"
            android:layout_column="2"
            android:layout_weight="1"
            style="@android:style/Widget.Button"
            android:background="@drawable/butcalc_states"
            android:scaleType="fitCenter"
            android:textColor="#ffffff"
            android:text="9"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:onClick="klik_num" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/But2_4"
            android:layout_column="3"
            android:layout_weight="1"
            style="@android:style/Widget.Button"
            android:background="@drawable/butcalc_redstates"
            android:scaleType="fitCenter"
            android:textColor="#ffffff"
            android:text="C"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:onClick="klik_del"
            android:longClickable="true" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/But3_1"
            android:layout_column="0"
            android:layout_weight="1"
            style="@android:style/Widget.Button"
            android:background="@drawable/butcalc_states"
            android:scaleType="fitCenter"
            android:textColor="#ffffff"
            android:text="4"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:onClick="klik_num" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/But3_2"
            android:layout_column="1"
            android:layout_weight="1"
            style="@android:style/Widget.Button"
            android:background="@drawable/butcalc_states"
            android:scaleType="fitCenter"
            android:textColor="#ffffff"
            android:text="5"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:onClick="klik_num" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/But3_3"
            android:layout_column="2"
            android:layout_weight="1"
            style="@android:style/Widget.Button"
            android:background="@drawable/butcalc_states"
            android:scaleType="fitCenter"
            android:textColor="#ffffff"
            android:text="6"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:onClick="klik_num" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/But3_4"
            android:layout_column="3"
            android:layout_weight="1"
            style="@android:style/Widget.Button"
            android:background="@drawable/butcalc_states"
            android:scaleType="fitCenter"
            android:textColor="#ffffff"
            android:text="Adv"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:onClick="klik_adv"
            android:longClickable="false"
            android:textStyle="normal" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/But4_1"
            android:layout_column="0"
            android:layout_weight="1"
            style="@android:style/Widget.Button"
            android:background="@drawable/butcalc_states"
            android:scaleType="fitCenter"
            android:textColor="#ffffff"
            android:text="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:onClick="klik_num" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/But4_2"
            android:layout_column="1"
            android:layout_weight="1"
            style="@android:style/Widget.Button"
            android:background="@drawable/butcalc_states"
            android:scaleType="fitCenter"
            android:textColor="#ffffff"
            android:text="2"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:onClick="klik_num" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/But4_3"
            android:layout_column="2"
            android:layout_weight="1"
            style="@android:style/Widget.Button"
            android:background="@drawable/butcalc_states"
            android:scaleType="fitCenter"
            android:textColor="#ffffff"
            android:text="3"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:onClick="klik_num" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/But4_4"
            android:layout_column="3"
            android:layout_weight="1"
            style="@android:style/Widget.Button"
            android:background="@drawable/butcalc_states"
            android:scaleType="fitCenter"
            android:textColor="#ffffff"
            android:text="Stat"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:onClick="klik_stat"
            android:textStyle="normal" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/But5_1"
            android:layout_column="0"
            android:layout_weight="1"
            style="@android:style/Widget.Button"
            android:background="@drawable/butcalc_states"
            android:scaleType="fitCenter"
            android:textColor="#ffffff"
            android:text="0"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:onClick="klik_num" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/But5_2"
            android:layout_column="1"
            android:layout_weight="1"
            style="@android:style/Widget.Button"
            android:background="@drawable/butcalc_states"
            android:scaleType="fitCenter"
            android:textColor="#ffffff"
            android:text="."
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:onClick="klik_num" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/But5_3"
            android:layout_column="2"
            android:layout_weight="1"
            style="@android:style/Widget.Button"
            android:background="@drawable/butcalc_states"
            android:scaleType="fitCenter"
            android:textColor="#ffffff"
            android:text="( )"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:onClick="klik_brackets" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/But5_4"
            android:layout_column="3"
            android:layout_weight="1"
            style="@android:style/Widget.Button"
            android:background="@drawable/butcalc_greenstates"
            android:scaleType="fitCenter"
            android:textColor="#ffffff"
            android:text="="
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_margin="2dp"
            android:onClick="klik_equals" />

    </TableRow>

</TableLayout>
